extend ../layouts/layout

block content
  .eight.wide.column
    form.ui.form.segment(method='post', action='/users')
      .field.required
        label 用户名
        input(placeholder='用户名', type='text', name='name')
      .field.required
        label 密码
        input(placeholder='密码', type='password', name='password')
      .field.required
        label 重复密码
        input(placeholder='重复密码', type='password', name='repassword')
      .field.required
        label 性别
        select.ui.compact.selection.dropdown(name='gender')
          option(value='m') 男
          option(value='f') 女
          option(value='x') 保密
      .field.required
        label 个人简介
        textarea(name='intro', rows='5')
      input.ui.button.fluid(type='submit', value='注册')
