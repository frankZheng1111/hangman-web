extend ../layouts/layout

block content
  form.ui.form.segment(method='post', action='/users/signin')
    .field.required
      label 用户名
      input(placeholder='用户名', type='text', name='name')
    .field.required
      label 密码
      input(placeholder='密码', type='password', name='password')
    input.ui.button.fluid(type='submit',  value='登录')
